source 'https://rubygems.org'

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

group :build do
  gem 'rake'
  gem 'yard'
end

group :development do
  gem 'pry'
  gem 'pry-nav'
  gem 'pry-stack_explorer'
  gem 'rubocop'
end

group :test do
  gem 'rspec'
  gem 'simplecov'
  gem 'benchmark-ips'
  gem 'rspec-benchmark'
end
